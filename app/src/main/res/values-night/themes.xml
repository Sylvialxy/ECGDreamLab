<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NeuroSleep" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_900</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="android:navigationBarColor">@color/blue_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
        
        <!-- Material3 specific colors -->
        <item name="android:colorPrimary">@color/blue_300</item>
        <item name="android:colorPrimaryDark">@color/blue_900</item>
        <item name="android:colorAccent">@color/blue_200</item>
    </style>

    <!-- Button styles for dark theme -->
    <style name="Widget.App.Button.Dark" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/blue_300</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources> 