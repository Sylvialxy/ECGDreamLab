<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心电测量记录"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- 监测时间 -->
        <TextView
            android:id="@+id/tv_monitoring_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监测时间: 2025/08/14 21:36:08-21:36:38"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- 监测时长 -->
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监测时长: 30秒"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- 指标网格 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp">

            <!-- 心率 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F8F9FA">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/heart_icon"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心率 (bpm)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E74C3C"/>
            </LinearLayout>

            <!-- 总心搏数 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F8F9FA">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/heart_icon"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总心搏数"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_total_beats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63"/>
            </LinearLayout>

            <!-- 最高心率 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="#F8F9FA">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_trend"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高心率"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_max_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"/>
            </LinearLayout>

            <!-- 最低心率 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#F8F9FA">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_trend"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低心率"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tv_min_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"/>
            </LinearLayout>
        </GridLayout>

        <!-- 医师分析 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#F8F9FA"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医师分析"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_doctor_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测量时长不足 25秒,无法进行医师分析"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView> 