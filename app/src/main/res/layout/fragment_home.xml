<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.home.HomeFragment">

    <!-- 顶部导航栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_700"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_usermenu"
                android:contentDescription="Menu Icon"
                app:tint="@color/white" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 主要内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 功能按钮区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/blue_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="功能导航"
                        android:textColor="@color/blue_700"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/use_tutorial_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="使用教程"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/use_tips_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="使用技巧"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/join_experiment_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="实验列表"
                            android:layout_weight="1"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 设备功能按钮区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/blue_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备功能"
                        android:textColor="@color/blue_700"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_bluetooth_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="蓝牙数据"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/makelabel_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="标记状态"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/upload_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="上传数据"
                            android:layout_weight="1"
                            app:backgroundTint="@color/blue_500"
                            style="@style/Widget.Material3.Button"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment容器 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

